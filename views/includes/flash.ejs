<% if (success && success.length) { %>
   <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-start col-4 offset-4" role="alert">
  <div>
     <%= success %> </div>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
    <% } %>

<% if (error && error.length) { %>
   <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-start col-4 offset-4" role="alert">
  <div>
     <%= error %> </div>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
    <% } %>

