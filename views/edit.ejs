<% layout('./layouts/boilerplate') %>

    <style>
        .edit-row {
            margin-left: 0;
            margin-right: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
    </style>
    <div class="row">
        <div class="col-8">
            <form method="post" action="/listings/<%= listing._id %>?_method=put" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="form">

                    <div class="mb-3">
                        <label class="form-label">Title
                            <input type="text" value="<%= listing.title %>" name="listing[title]" class="form-control"
                                required>
                        </label>
                        <div class="invalid-feedback">Title looks Good.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description
                            <textarea value="<%= listing.description %>" name="listing[description]"
                                class="form-control" required><%= listing.description %></textarea>
                        </label>
                        <div class="invalid-feedback">Enter short description</div>
                    </div>

                    <div class="mb-3-editImage">
                        Original Listing Image <br />
                        <img src="<%= originalImageUrl %> " />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="image">Image
                            <input type="file" name="listing[image]" class="form-control">
                        </label>
                        <div class="invalid-feedback">Image link should be correct</div>
                    </div>

                    <div class="edit-row">
                        <div class="mb-3 col-md-3">
                            <label class="form-label">Price
                                <input type="number" value="<%= listing.price %>" name="listing[price]"
                                    class="form-control" required>
                            </label>
                            <div class="invalid-feedback">Enter valid Price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label class="form-label">Country
                                <input type="text" value="<%= listing.country %>" name="listing[country]"
                                    class="form-control" required>
                            </label>
                            <div class="invalid-feedback">Enter valid country Name</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select name="listing[category]" class="form-select" required>
                            <option value="" disabled selected>Select a category</option>
                            <option value="trending">Trending</option>
                            <option value="mountain">Mountains</option>
                            <option value="rooms">Rooms</option>
                            <option value="iconic cities">Iconic Cities</option>
                            <option value="castles">Castles</option>
                            <option value="pools">Pools</option>
                            <option value="camping">Camping</option>
                            <option value="farms">Farms</option>
                            <option value="arctic">Arctic</option>
                            <option value="domes">Domes</option>
                            <option value="island">Island</option>
                            <option value="beach">Beach</option>
                        </select>
                        <div class="invalid-feedback">Please select a valid category</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Location
                            <input type="text" value="<%= listing.location %>" name="listing[location]"
                                class="form-control" required>
                        </label>
                        <div class="valid-feedback">Enter valid location</div>
                    </div><br>

                    <div>
                        <button type="submit" class="button">Update Listing</button>
                        <button type="reset" class="button">Clear Form</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>